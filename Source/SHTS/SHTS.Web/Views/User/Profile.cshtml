@model Witbird.SHTS.Web.Models.User.UserViewModel
@{
    ViewBag.Title = "用户中心 | " + Witbird.SHTS.Web.Public.StaticUtility.Config.Name;
    Layout = "~/Views/Shared/WebLayoutPage.cshtml";
}
@section head
{
    <link href="/content/css/news.css" rel="stylesheet"/>
    <link href="~/Content/css/user.css" rel="stylesheet"/>
    <style type="text/css">
        .ur_title {
            width: 80px;
        }
    </style>
}

<div class="main w1000">
    <div class="location">
        您当前所处的位置：<a href="/" class="blue">首页</a><span class="ch c1">&nbsp;&gt;&nbsp;</span><a href="/user/" class="blue">用户中心</a><span class="ch">&nbsp;&gt;&nbsp;账户详细资料</span>
    </div>
    @Html.Action("UserMenu", "User")
    <div class="user_right">
        <div class="user_right_bt">
            <p class="n1">编辑账户详细信息</p>
        </div>
        <form action="#" enctype="multipart/form-data" method="POST">
            <div class="clearfix"></div>
            <div class="ur_title"><span class="red ch"></span>@(Model.UserEntity.UserType == 0 ? "个人简介" : "企业简介")：</div>
            <div class="ur_box">
                <textarea name="description" cols="" rows="" class="ur_tra" style="width: 425px;">@Model.description</textarea>
            </div>
            <div class="clearfix"></div>
            <div class="ur_tj">
                <input name="" type="submit" class="tjzl_btn" value="提交" />
            </div>
        </form>
    </div>
    <div style="clear: both; height: 30px;"></div>
</div>

@section FooterJS
{
<script type="text/javascript">
    //上传图片实时预览
    $(function () {
        //建立一個可存取到該file的url
        function getObjectURL(file) {
            var url = null;
            if (window.createObjectURL != undefined) { // basic
                url = window.createObjectURL(file);
            } else if (window.URL != undefined) { // mozilla(firefox)
                url = window.URL.createObjectURL(file);
            } else if (window.webkitURL != undefined) { // webkit or chrome
                url = window.webkitURL.createObjectURL(file);
            }
            return url;
        }
        function uploadfile(ele) {
            var objUrl = getObjectURL(ele.files[0]);
            $("#preview").attr("src", objUrl);
            $("#IdentiyImgFile").val($('#IdentiyImg').val());
        }
        $("#IdentiyImgBtn").click(function () {
            $("#IdentiyImg").click();
        });
        $("#IdentiyImg").change(function () {
            uploadfile(this);
        });
    });
</script>
}

