@model Witbird.SHTS.Web.Models.User.UserViewModel
@{
    ViewBag.Title = "用户中心-VIP信息 | " + Witbird.SHTS.Web.Public.StaticUtility.Config.Name;
    Layout = "~/Views/Shared/WebLayoutPage.cshtml";
}
@section head
{
    <link href="/Content/css/user.css" rel="stylesheet" />
    <link href="/Content/css/tovip.css" rel="stylesheet" />
    <style type="text/css">
        .ur_title {
            width: 80px;
        }

        .usertable {
            font-size:15px;
        }
    </style>
}
<div class="main w1000">
    <div class="location">
        您当前所处的位置：<a href="/" class="blue">首页</a><span class="ch c1">&nbsp;&gt;&nbsp;</span><a
            href="/user/" class="blue">用户中心</a><span class="ch">&nbsp;&gt;&nbsp;VIP会员信息</span>
    </div>
    @Html.Action("UserMenu", "User")
    <div class="user_right">
        <div class="user_right_bt">
            <p class="n1">VIP会员信息</p>
        </div>

        <table class="usertable">
            <thead>
                <tr style="background: #f5f8fa;">
                    <td><strong>简介</strong></td>
                    <td><strong>用户名</strong></td>
                    <td><strong>VIP时长</strong></td>
                    <td><strong>开始时间</strong></td>
                    <td><strong>结束时间</strong></td>
                    <td><strong>剩余天数</strong></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>活动在线VIP会员信息</td>
                    <td>@Model.UserEntity.UserName</td>
                    <td>@Model.VipInfo.Duration 年</td>
                    <td>@Model.VipInfo.StartTime.ToString()</td>
                    <td>@Model.VipInfo.EndTime.ToString()</td>
                    <td>
                        @((Model.VipInfo.EndTime.Value - DateTime.Now).Days) 天
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="clearfix"></div>
        <div class="user_right_bt" style="color:#ff6a00;">小提示：VIP会员时间过期后需要重新申请</div>
    </div>
    <div style="clear: both; height: 30px;"></div>
</div>
