@{
    ViewBag.Title = "我的账户 | " + Witbird.SHTS.Web.Public.StaticUtility.Config.Name;
    Layout = "~/Views/Shared/WebLayoutPage.cshtml";
}

@section head
{
    <style type="text/css">
        .usertable tr:hover {
            background: #f5f8fa;
        }
        .userbtn{
               background-color: #ff9a15;
    color: #ffffff;
    border-radius: 4px;
    border: none;
        }
    </style>
    <script type="text/javascript" src="/content/js/payment.js"></script>
}
@model Witbird.SHTS.Web.Models.FinanceModel

<div class="main w1000">
    <div class="location">
        您当前所处的位置：
        <a href="/" class="blue">首页</a>
        <span class="ch c1">&nbsp;&gt;&nbsp;</span>
        <a href="/user" class="blue">用户中心</a>
        <span class="ch c1">&nbsp;&gt;&nbsp;</span>
        我的账户
    </div>
    @Html.Action("UserMenu", "User")
    <div class="user_right">
        <div class="user_right_bt">
            <p class="n1">我的账户</p>
            <p class="n1" style="float: right;">
            </p>
        </div>
        <table class="usertable">
            <tr style="background: #f5f8fa;">
                <td style="width: 100px;"><strong>账户昵称</strong></td>
                <td style="width: 100px;"><strong>可用余额</strong></td>
                <td style="width: 100px;"><strong>冻结金额</strong></td>
                <td style="width: 100px;"><strong>创建时间</strong></td>
            </tr>
            @if (Model != null)
            {
                <tr>
                    <td>@Model.CurrentUser.UserName</td>
                    <td>@Model.UserBalance.AvailableBalance.ToString("F2")<span>元</span></td>
                    <td>@Model.UserBalance.FrozenBalance.ToString("F2")<span>元</span></td>
                    <td>@Model.UserBalance.InsertedTimestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            }
        </table>
        <div class="fr ur_tj">
            <input name="" type="button" class="tjzl_btn userbtn" value="财务记录" onclick="window.location.href='/finance/history'" />&nbsp;&nbsp;&nbsp;
            <input name="" type="button" class="tjzl_btn" value="余额提现" onclick="window.location.href='/finance/withdraw'" />
        </div>
    </div>
    <div style="clear: both; height: 30px;"></div>
</div>
