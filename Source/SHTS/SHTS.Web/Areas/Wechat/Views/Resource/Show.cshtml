@model Witbird.SHTS.DAL.New.Resource
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Areas/Wechat/Views/Shared/WechatLayoutPage.cshtml";
    var xx = "space";
    switch (Model.ResourceType)
    {
        case 1:
            xx = "space";
            break;
        case 2:
            xx = "actor";
            break;
        case 3:
            xx = "equipment";
            break;
        case 4:
            xx = "other";
            break;
        default:
            break;
    }
}
@section head
{
    <style type="text/css">
        #@(xx) a {
            color: #ffffff;
            background-color: #2577e3;
        }
    </style>
}

<div class="main">
    <ul class="details">
        <li class="dtitle">
            <h2 style="font-size: 16px; color: #1CB03A;">@Model.Title</h2>
        </li>
        <li>发布时间：<span class="yellow2">@Model.CreateTime.ToString("yyyy-MM-dd HH:mm")</span></li>

    </ul>
    <div class="active_info">
        @(new HtmlString(Model.Description))
    </div>
    <div style="clear: both; height: 30px;"></div>
</div>
