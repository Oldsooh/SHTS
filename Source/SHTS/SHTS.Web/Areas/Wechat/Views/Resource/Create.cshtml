@model Witbird.SHTS.Web.Areas.Wechat.Models.WeChatResourceViewModel
@{
    ViewBag.Title = "提交资源信息";
    Layout = "~/Areas/Wechat/Views/Shared/WechatLayoutPage.cshtml";
}
@section head
{
    <link href="/content/css/login.css" rel="stylesheet" />
    <link href="/Content/dialog/css/base.css" rel="stylesheet" />
    <link href="~/Content/webuploader/webuploader.css" rel="stylesheet" />
    <link href="~/Content/webuploader/demo.css" rel="stylesheet" />
    <link href="~/Content/uploadifive/uploadifive.css" rel="stylesheet" />
    <style type="text/css">
        .inline {
            display: inline-block;
            width: 49%;
            margin-top: 10px;
            margin-bottom: 10px;
        }

            .inline.wide {
                width: 100%;
            }

            .inline > .title {
                font-size: 13px;
                /* color: #666; */
            }

                .inline > .title.highlight {
                    font-weight: bold;
                }


                    .inline > .title.highlight:after {
                        content: '*';
                        color: red;
                    }

            .inline > input[type=text] {
                width: 86%;
            }

            .inline.wide > input[type=text] {
                width: 93%;
            }

            .inline > select {
                width: 100%;
                height: 100%;
            }

            .inline.area > select {
                width: 32%;
            }

            .inline > .detail {
                border: 1px solid #CECECF;
                box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.1);
                padding-left: 10px;
                padding-bottom: 10px;
                width: 96%;
            }

                .inline > .detail > div {
                    display: inline-block;
                    margin-top: 10px;
                }

                .inline > .detail > div {
                    margin-right: 10px;
                }

                    .inline > .detail > div input[type=checkbox] {
                        width: 18px;
                        height: 18px;
                        position: initial;
                        vertical-align: middle;
                        margin-top: -3px;
                    }

        .hd {
            display: none;
        }


        #uploader-demo label {
            position: inherit;
            font-size: 10px;
            color: transparent;
            top: 0px;
            padding-left: 0px;
            width: 80% !important;
        }

        .wrap {
            height: auto;
        }

        .register-box {
            position: initial;
            margin-bottom: 20px;
        }

        .reg-form {
            height: auto;
            padding-left: 5px;
            width: unset !important;
        }

        .uploadifive-button,.uploadifive-button>input[type=file], .uploadifive-queue-item {
            border-radius: 3px !important;
            margin-top: 5px !important;
            margin-right: 10px !important;
            padding: 0 !important;
            width: 100px !important;
            height: 100px !important;
            float: left !important;
            background-repeat: round !important;
            border: 1px solid #666 !important;
        }

        .uploadifive-button {
            background-image: url('/Areas/Wechat/Content/images/btnAdd.png') !important;
            background-repeat: no-repeat!important;
        }

        .uploadifive-queue-item > .close {
            width: 30px;
            height: 30px;
            background-image: url(../../../../Content/images/no.png);
            background-size: contain;
        }

        .uploadifive-queue-item > div > .fileinfo, .uploadifive-queue-item > div > .filename {
            display: none;
            width: 0px;
            height: 0px;
        }
    </style>
}
<!-- content -->
<div class="wrap" style="width: 100%">
    <div class="register-box" style="width: 100%;">
        <form id="js-form-mobile" action="/wechat/resource/create" class="reg-form" onsubmit="return beforesubmit();" enctype="multipart/form-data" method="post">
            <div class="inline wide" style="margin:0;">
                <div class="title" style="color:#666;">
                    注意：加粗并标记红色<span style="color:red;">*</span>表示必填字段
                </div>
            </div>
            <div>
                <div class="inline wide">
                    <div class="title highlight">
                        资源标题
                    </div>
                    <input type="text" name="Title" placeholder="请输入资源标题" class="text" />
                </div>
                <!-- Resource type list -->
                <div class="inline">
                    <div class="title highlight">
                        资源类别
                    </div>
                    <select id="ResType" name="ResType" class="text" onchange="changeResType(this);">
                        @foreach (var item in Html.ResourceList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--space type list-->
                <div class="sp inline">
                    <div class="title highlight">
                        场地类型
                    </div>
                    <select name="SpaceTypeId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.SpaceTypeList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <!--space size list-->
                <div class="sp inline">
                    <div class="title highlight">
                        场地面积
                    </div>
                    <select name="SpaceSizeId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.SpaceSizeList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--space people list-->
                <div class="sp inline">
                    <div class="title highlight">
                        容纳人数
                    </div>
                    <select name="SpacePeopleId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.SpacePeopleList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--Space features list-->
                <div class="sp inline wide feature">
                    <div class="title highlight">
                        场地特点
                    </div>
                    <div class="detail">
                        <input type="hidden" id="SpaceFeatures" name="SpaceFeatures" />
                        @foreach (var item in Html.SpaceFeatureList())
                        {
                            <div>
                                <input class="spft" type="checkbox" value="@item.Value" />
                                @item.Text
                            </div>
                        }
                    </div>
                </div>
                <!--Space facilities list-->
                <div class="sp inline wide feature">
                    <div class="title">
                        配套设施
                    </div>
                    <div class="detail">
                        <input id="SpaceFacilities" name="SpaceFacilities" type="hidden" />
                        @foreach (var item in Html.SpaceFacilityList())
                        {
                            <div>
                                <input class="spfc" type="checkbox" value="@item.Value" />
                                @item.Text
                            </div>
                        }
                    </div>
                </div>
                <!--Space treat list-->
                <div class="sp inline wide feature">
                    <div class="title">
                        酒宴提供
                    </div>
                    <div class="detail">
                        <div>
                            <input type="checkbox" name="chk_SpaceTreat" id="chk_SpaceTreat" /><text>可以提供酒宴</text>
                        </div>
                    </div>
                </div>
                <!--actor type list-->
                <div class="ac inline hd">
                    <div class="title highlight">
                        演员类型
                    </div>
                    <select id="ActorTypeId" name="ActorTypeId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.ActorTypeList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--actor from list-->
                <div class="ac inline hd">
                    <div class="title highlight">
                        所属组织
                    </div>
                    <select id="ActorFromId" name="ActorFromId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.ActorFromList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <!--actor sex list-->
                <div class="ac inline hd">
                    <div class="title highlight">
                        演员性别
                    </div>
                    <select id="ActorSex" name="ActorSex" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.ActorSexList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--equipment type list-->
                <div class="eq inline hd">
                    <div class="title highlight">
                        设备类型
                    </div>
                    <select id="EquipTypeId" name="EquipTypeId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.EquipTypeList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <!--other type list-->
                <div class="ot inline hd">
                    <div class="title highlight">
                        具体类型
                    </div>
                    <select id="OtherTypeId" name="OtherTypeId" class="text">
                        <option value="-1">不确定</option>
                        @foreach (var item in Html.OtherTypeList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>

                <!--location area-->
                <div class="inline wide area">
                    <div class="title highlight">
                        地区
                    </div>
                    <select id="ddlProvince" name="ddlProvince" class="text" onchange="loadCities();">
                        <option value="-1">省份</option>
                        @foreach (var item in Html.ProviceList())
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <select id="ddlCity" name="ddlCity" class="text" onchange="loadAreas();">
                        <option value="-1">全省/市</option>
                        @foreach (var item in Html.CityList(Model.ddlProvince))
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <select id="ddlArea" name="ddlArea" class="text">
                        <option value="-1">全县/区</option>
                        @foreach (var item in Html.AreaList(Model.ddlCity))
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <!--location detail-->
                <div class="inline wide">
                    <div class="title highlight">
                        详细地址
                    </div>
                    <input type="text" id="DetailAddress" name="DetailAddress" placeholder="请输入详细地址" class="text" />
                </div>
                <!--actor performance href-->
                <div class="ac hd inline wide">
                    <div class="title">
                        演出视频
                    </div>
                    <input type="text" id="Href" name="Href" placeholder="请输入演出视频在线观看地址" class="text" />
                </div>
                <!--contact name-->
                <div class="inline wide">
                    <div class="title highlight">
                        联系人姓名
                    </div>
                    <input type="text" id="DetailAddress" name="DetailAddress" placeholder="请输入联系人姓名或称呼" class="text" />
                </div>
                <!--contact Telephone-->
                <div class="inline">
                    <div class="title">
                        固定电话
                    </div>
                    <input type="text" id="Telephone" name="Telephone" placeholder="请输入固定座机号码" class="text" />
                </div>
                <!--contact cellphone-->
                <div class="inline">
                    <div class="title highlight">
                        移动电话
                    </div>
                    <input type="text" id="Mobile" name="Mobile" placeholder="请输入移动手机号码" class="text" />
                </div>
                <!--contact QQ-->
                <div class="inline">
                    <div class="title">
                        QQ帐号
                    </div>
                    <input type="text" id="QQ" name="QQ" placeholder="请输入联系人QQ帐号" class="text" />
                </div>
                <!--contact wechat-->
                <div class="inline">
                    <div class="title">
                        微信帐号
                    </div>
                    <input type="text" id="WeChat" name="WeChat" placeholder="请输入联系人微信帐号" class="text" />
                </div>
                <!--contact email-->
                <div class="inline wide">
                    <div class="title">
                        邮箱帐号
                    </div>
                    <input type="text" id="Email" name="Email" placeholder="请输入联系人微信帐号" class="text" />
                </div>
                <!--upload image-->
                <div class="inline wide">
                    <div class="title highlight">
                        资源图片
                    </div>
                    <input id="ImageUrls" name="ImageUrls" type="hidden">
                    <input name="file_upload" id="file_upload" type="file" multiple="multiple" accept="image/*" />
                </div>
            </div>
        </form>
    </div>
</div>
<!-- content -->
@section FooterJS
{
    <script src="~/Content/js/city.js"></script>
    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/uploadifive/jquery.uploadifive.js"></script>
    <script>
        function changeResType(obj) {
            $('.sp').addClass("hd");
            $('.ac').addClass("hd");
            $('.eq').addClass("hd");
            $('.ot').addClass("hd");
            switch (obj.value) {
                case "1":
                    $('.sp').removeClass("hd");
                    break;
                case "2":
                    $('.ac').removeClass("hd");
                    break;
                case "3":
                    $('.eq').removeClass("hd");
                    break;
                case "4":
                    $('.ot').removeClass("hd");
                    break;
                default:
                    break;
            }
        }

        changeResType(document.getElementById('ResType'));

        function beforesubmit() {
            var facilities = "";
            var isfirst = true;
            $('.spfc').each(function () {
                if (this.checked) {
                    if (isfirst) {
                        facilities = this.value;
                    } else {
                        facilities = facilities + "," + this.value;
                    }
                    isfirst = false;
                }
            })
            $('#SpaceFacilities').val(facilities);

            var features = "";
            isfirst = true;
            $('.spft').each(function () {
                if (this.checked) {
                    if (isfirst) {
                        features = this.value;
                    } else {
                        features = features + "," + this.value;
                    }
                    isfirst = false;
                }
            })
            $('#SpaceFeatures').val(features);

            if ($('#chk_SpaceTreat')[0].checked) {
                $('#SpaceTreat').val("1");
            } else {
                $('#SpaceTreat').val("2");
            }

            var imagesUrls = "";
            isfirst = true;
            $('.uploadifive-queue-item').each(function () {
                if (!isfirst) {
                    imagesUrls += ',';
                    isfirst = false;
                }

                var imageUrl = $(this).attr('rurl');

                imagesUrls += imagesUrls;
            });

            $('#ImageUrls').val(imagesUrls);

            $('#Description').val(editorContent.html());

            return true;
        }

        function showMessage(msg, isSuccessfulMsg) {
            if (msg != '') {
                if (isSuccessfulMsg) {
                    ds.dialog({
                        title: '消息提示',
                        content: msg,
                        icon: "/Content/dialog/images/success.png"
                    });
                }
                else {
                    ds.dialog({
                        title: '消息提示',
                        content: msg,
                        icon: "/Content/dialog/images/info.png"
                    });
                }
            }
        }

        function addact() {
            if ($("#title").val() == "") {
                ds.dialog({
                    title: '消息提示',
                    content: "标题不能为空",
                    icon: "/Content/dialog/images/info.png"
                });
                return false;
            }
            if ($("#Adress").val() == "" || $("#ddlArea").val() == "") {
                ds.dialog({
                    title: '消息提示',
                    content: "地址不能为空",
                    icon: "/Content/dialog/images/info.png"
                });
                return false;
            }
            $("#js-form-mobile").submit();
        }
        //上传图片预览
    </script>
    <script type="text/javascript">
        var existImgCount = 0;
        $(function () {
            $('#file_upload').uploadifive({
                'auto': true,
                'uploadScript': '/Content/upload/uploadimage.ashx',
                'buttonText': '选择资源照片',
                'fileType': 'image/*',
                'multi': true,
                'queueSizeLimit': 12,
                'uploadLimit': 12,
                'fileSizeLimit': 5 * 1024 * 1024,
                'onSelect': function (file) {
                    if (file.size >= 5 * 1024 * 1024) {
                        alert(file.name + '图片不能超过5M');
                        $("#file_upload").uploadify('cancel');
                        return false;
                    }
                },
                'onCancel': function (file) {
                    alert('The file ' + file.name + ' was cancelled!');
                },
                'onUploadComplete': function (file, data) {

                    var postfile = JSON.parse(data);
                    var urls = $('#ImageUrls').val();
                    if (urls == "") {
                        urls = postfile.OriginalImage;
                    } else {
                        urls = urls + "|" + postfile.OriginalImage;
                    }
                    $('#ImageUrls').val(urls);
                    var itemid = $(file.queueItem);
                    var imgurl = "background-image:url('" + postfile.OriginalImage + "')";
                    $(itemid).attr("style", imgurl);
                    $(itemid).attr("rurl", postfile.OriginalImage);
                },
                'onCancel': function (file) {
                },
                'onFallback': function () {
                    alert("该浏览器无法使用!");
                },
                'onUpload': function (file) {
                }
            });
        });
    </script>
}
