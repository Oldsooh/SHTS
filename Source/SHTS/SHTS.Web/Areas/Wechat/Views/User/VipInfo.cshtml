@model Witbird.SHTS.Web.Models.User.UserViewModel
@{
    ViewBag.Title = "VIP会员信息";
    Layout = "~/Areas/Wechat/Views/Shared/WechatLayoutPage.cshtml";
}
@section head
{
    <link href="~/Areas/Wechat/Content/styles/tovip.css" rel="stylesheet" />
    <link href="~/Areas/Wechat/Content/styles/user.css" rel="stylesheet" />
    <style type="text/css">
        .ur_title { width: 80px; }

        .usertable { font-size: 15px; }

            .usertable td { width: 120px; padding-left: 10px; height: 35px; line-height: 35px; }
    </style>
}
<div class="wrap">
    <br />
    <table class="usertable">
        <thead>
            <tr style="background: gainsboro;">
                <td><strong>简介</strong></td>
                <td><strong>用户名</strong></td>
                <td><strong>VIP时长</strong></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>VIP会员信息</td>
                <td>@Model.UserEntity.UserName</td>
                <td style="width: 60px;">@Model.VipInfo.Duration 年</td>
            </tr>
            <tr style="background: gainsboro;">
                <td><strong>开始时间</strong></td>
                <td><strong>结束时间</strong></td>
                <td><strong>剩余天数</strong></td>
            </tr>
            <tr>
                <td>@Model.VipInfo.StartTime.ToString()</td>
                <td>@Model.VipInfo.EndTime.ToString()</td>
                <td style="width: 60px;">
                    @((Model.VipInfo.EndTime.Value - DateTime.Now).Days) 天
                </td>
            </tr>
        </tbody>
    </table>
    <div class="clearfix"></div>
    <br />
    <div class="user_right_bt" style="padding-left:10px; color: #ff6a00;">小提示：VIP会员时间过期后需要重新申请</div>
    <div style="clear: both; height: 30px;"></div>
</div>
