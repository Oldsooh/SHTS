    <script>
        function sendMessage(isText) {
            var arrIconSrc = '@currentWeChatUser.Photo';
            var content = document.getElementById('chatHistory');
            var text = document.getElementById('text');
            var comments = '';

            if (isText) {
                comments = text.value;
            }
            else {

                var selectedResourceId = $("input[name='resourceId']:checked").val();
                var selectedResourceTitle = $("input[name='resourceId']:checked").attr('title');

                if (selectedResourceId < 1 || selectedResourceTitle == undefined || selectedResourceTitle == '') {
                    return;
                }

                comments = '资料：<a href="/resource/show/' + selectedResourceId + '">' + selectedResourceTitle + '</a>';
            }

            if (comments == '') {
                return;
