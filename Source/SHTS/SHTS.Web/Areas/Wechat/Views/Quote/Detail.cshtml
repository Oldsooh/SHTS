                            <input name="file_upload_video" id="file_upload_video" type="file" class="hide" accept="video/*" />
                        </li>
                        <li>
                            <div class="btn btn-Upload" onclick="showResourceSelection(true);">
                                <i class="glyphicon glyphicon-open-file"></i><span>发送资料</span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        }
        else
        {
