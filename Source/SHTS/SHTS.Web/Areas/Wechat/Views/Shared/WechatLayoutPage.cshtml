<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta name="wap-font-scale" content="no" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description" />
    <link href="/content/Wechat/css/common.css" rel="stylesheet" />
    <link href="http://cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .location { margin-top: 15px; margin-bottom: 15px; padding-left: 10px; font-size: 14px; }
        #nav { margin-top: 10px; height: auto; }
        .navli { width: 20%; }

        /*Override bootstrap css*/
        .btn-group-root { width:100%;padding:2px 5px;}
            .btn-group-root .btn-group button, .btn-group-root .btn-group ul, .btn-group-root .btn-group ul > li { width:100%;}
        .btn { padding: 2px 5px; }
    </style>
    @RenderSection("head", false)
</head>
<body>
    <div class="wrap">
        <div id="top">
            <div id="logo">
                <a href="http://mp.weixin.qq.com/s?__biz=MzIzODAzMjg1Mg==&mid=210615532&idx=1&sn=7188493d42c8633421c78667266e17f2#rd">
                    <img src="/content/images/logo.png" alt="logo" />
                </a>
            </div>

            <div id="city">
                @{
                    if (Session["CityName"] != null)
                    {

                        <span id="currentCityName">@Session["CityName"].ToString()</span>
                    }
                    else
                    {
                        <span id="currentCityName">正在定位</span>
                    }

                    <a href="/wechat/city/index">切换</a>
                }
            </div>
            <div id="usercenter">
                @Html.Action("UserNavBar", "User")
                @*<a href="~/Wechat/user/index" class="username">@((Session["WeChatUserInfo"] as Witbird.SHTS.Model.WeChatUser).NickName)</a>*@
            </div>
        </div>

        <div class="location">
            当前位置：<a href="/wechat/user/index">会员中心</a><span class="ch">&nbsp;&gt;&nbsp;@ViewBag.Title</span>
        </div>

        @RenderBody()

    </div>
    @{
        <script src="~/Content/js/jquery-1.11.1.min.js"></script>
        <script src="~/Content/js/jquery.cookie.js"></script>
        <script src="~/Content/js/jquery.validate.min.js"></script>
        <script src="~/Content/dialog/js/dsdialog.js"></script>
        <script src="~/Content/js/jquery.form.js"></script>
        <script src="~/Content/js/template.js"></script>
        <script src="http://cdn.bootcss.com/jquery/2.1.4/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

        if (Session["CityId"] == null)
        {
            <script type="text/javascript" src="http://int.dpool.sina.com.cn/iplookup/iplookup.php?format=js"></script>
            <script>
                function setLocalCity() {
                    // 新浪根据ip获取地址
                    var localprovince = '';
                    var localcity = '';
                    localprovince = remote_ip_info["province"];
                    localcity = remote_ip_info["city"];
                    var nowTime = new Date().getTime();
                    var url = encodeURI("/wechat/city/setlocalcity?cityName=" + localcity + "&time=" + nowTime);
                    $.get(url, function (data, status) {
                        if (status == "success") {
                            if (data != "" && data != "no") {
                                document.getElementById("currentCityName").innerHTML = data;
                                //自动定位到城市后刷新获取相应数据
                                window.location = window.location;
                            }
                            else {
                                document.getElementById("currentCityName").innerHTML = "全国";
                            }
                        }
                    });
                }

                setLocalCity();
            </script>
        }
    }
    @RenderSection("FooterJS", false)
</body>
</html>
