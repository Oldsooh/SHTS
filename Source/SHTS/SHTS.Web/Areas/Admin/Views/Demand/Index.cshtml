@model Witbird.SHTS.Web.Areas.Admin.Models.DemandModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    <link href="/areas/admin/content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/content/css/select.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/areas/admin/content/js/jquery.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/jquery.idTabs.min.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/select-ui.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function (e) {
            $(".select1").uedSelect({
                width: 345
            });
            $(".select2").uedSelect({
                width: 150
            });
            $(".select3").uedSelect({
                width: 100
            });
        });
    </script>
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="/admin/">首页</a></li>
            <li><a href="/admin/news/index">需求列表</a></li>
        </ul>
    </div>

    <div class="formbody">


        <div id="usual1" class="usual">

            <div class="itab">
                <ul>
                    <li><a href="#tab1" class="selected">需求列表</a></li>
                </ul>
            </div>

            <div id="tab1" class="tabson">


                <table class="tablelist">
                    <thead>
                        <tr>
                            @*<th>
                                <input name="" type="checkbox" value="" checked="checked" /></th>*@
                            <th>序号</th>
                            <th>需求类型</th>
                            <th style="min-width:250px;">标题</th>
                            <th>发布者</th>
                            <th>地区</th>
                            <th>开始时间</th>
                            <th>结束时间</th>
                            <th>发布时间</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Demands != null && Model.Demands.Count > 0)
                        {
                            foreach (var item in Model.Demands)
                            {  
                            <tr>
                                @*<td>
                                    <input name="" type="checkbox" value="" /></td>*@
                                <td>
                                    <span>@item.RowNumber</span>
                                </td>
                                <td>
                                    @if (Model.DemandCategories != null && Model.DemandCategories.Count > 0)
                                    {
                                        foreach (var category in Model.DemandCategories)
                                        {
                                            if (item.CategoryId == category.Id)
                                            {
                                        <span>@category.Name</span>
                                                break;
                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    <a href="/demand/show/@item.Id" target="_blank" style="color: #3858FA;">@item.Title</a>
                                </td>
                                <td>@item.UserName</td>
                                <td>
                                    @Witbird.SHTS.Web.Public.StaticUtility.GetProvinceAndCityNameById(item.Province, item.City, item.Area)
                                </td>
                                <td>
                                    <span>@item.StartTime.Value.ToString("yyyy-MM-dd")</span>
                                </td>
                                <td>
                                    <span>@item.EndTime.Value.ToString("yyyy-MM-dd")</span>
                                </td>
                                <td>
                                    <span>@item.InsertTime.ToString("yyyy-MM-dd HH:mm")</span>
                                </td>

                                <td>
                                    <a href="/admin/demand/delete?id=@item.Id" class="tablelink" style="color:#ff0000;" onclick="if(confirm('亲，你确认要删除吗？')==false)return false;">删除</a>
                                </td>
                            </tr> 
                            }
                        }
                    </tbody>
                </table>

                <div style="height:30px;"></div>

                <!--分页开始-->
                <div class="fenye" style="margin: 0 auto;">
                    @if (Model.PageCount > 1)
                    {
                        for (int step = 1; step <= Model.PageCount; step = step + Model.PageStep)
                        {
                            if (Model.PageIndex >= step && Model.PageIndex < step + Model.PageStep)
                            {
                                //上一页
                                if (Model.PageIndex > 1)
                                {
                        <span><a href="/admin/demand/index/@(Model.PageIndex - 1)" class="prv">上一页</a></span>
                                }
                                //首页
                                if (Model.PageStep < Model.PageIndex)
                                {
                        <span><a href="/admin/demand/index/1">首页</a></span>
                                }
                                //分页
                                for (int i = step; i < step + Model.PageStep; i++)
                                {
                                    if (i <= Model.PageCount)
                                    {
                                        if (i == Model.PageIndex)
                                        {
                        <span><a href="/admin/demand/index/@i" class="no">@i</a></span>
                                        }
                                        else
                                        {
                        <span><a href="/admin/demand/index/@i">@i</a></span>
                                        }
                                    }
                                }
                                //末页
                                if (step + Model.PageStep <= Model.PageCount)
                                {
                        <span><a href="/admin/demand/index/@Model.PageCount">末页</a></span>
                                }
                                //下一页
                                if (Model.PageIndex < Model.PageCount)
                                {
                        <span><a href="/admin/demand/index/@(Model.PageIndex + 1)" class="next">下一页</a></span>
                                }
                            }
                        }

                    }
                </div>
                <!--分页结束-->

            </div>


        </div>

        <script type="text/javascript">
            $("#usual1 ul").idTabs();
        </script>

        <script type="text/javascript">
            $('.tablelist tbody tr:odd').addClass('odd');
        </script>





    </div>


</body>

</html>

