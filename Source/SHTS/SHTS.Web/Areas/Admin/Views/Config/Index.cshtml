@model Witbird.SHTS.Model.Config
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    <link href="/areas/admin/content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/content/css/select.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/areas/admin/content/js/jquery.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/jquery.idTabs.min.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/select-ui.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function (e) {
            $(".select1").uedSelect({
                width: 345
            });
            $(".select2").uedSelect({
                width: 150
            });
            $(".select3").uedSelect({
                width: 100
            });
        });
    </script>
    <style type="text/css">
        .scinput
        {
            width: 350px;
        }
    </style>
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="/admin/">首页</a></li>
            <li><a href="#">参数设置</a></li>
        </ul>
    </div>

    <div class="formbody">


        <div id="usual1" class="usual">

            <div class="itab">
                <ul>
                    <li><a href="#tab2">参数设置</a></li>
                </ul>
            </div>




            <div id="tab2" class="tabson">
                <form id="aboutform" method="post" action="/admin/config/edit">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <ul class="forminfo">

                        <li>
                            <label>网站名称<b>*</b></label><input id="Name" name="Name" type="text" class="scinput" value="@Model.Name" /></li>
                        <li>
                            <label>首页标题<b>*</b></label><input id="Title" name="Title" type="text" class="scinput" value="@Model.Title" /></li>
                        <li>
                            <label>关键字<b>*</b></label><input id="Keywords" name="Keywords" type="text" class="scinput" value="@Model.Keywords" /></li>
                        <li>
                            <label>网站描述<b>*</b></label><input id="Description" name="Description" type="text" class="scinput" value="@Model.Description" /></li>
                        <li>
                            <label>固定电话<b>*</b></label><input id="Tel" name="Tel" type="text" class="scinput" value="@Model.Tel" /></li>
                        <li>
                            <label>移动电话<b>*</b></label><input id="Phone" name="Phone" type="text" class="scinput" value="@Model.Phone" /></li>
                        <li>
                            <label>域名<b>*</b></label><input id="Domain" name="Domain" type="text" class="scinput" value="@Model.Domain" /></li>
                        <li>
                            <label>邮箱<b>*</b></label><input id="Email" name="Email" type="text" class="scinput" value="@Model.Email" /></li>
                        <li>
                            <label>QQ号一<b>*</b></label><input id="QQ1" name="QQ1" type="text" class="scinput" value="@Model.QQ1" /></li>
                        <li>
                            <label>QQ号二<b>*</b></label><input id="QQ2" name="QQ2" type="text" class="scinput" value="@Model.QQ2" /></li>
                        <li>
                            <label>QQ号三<b>*</b></label><input id="QQ3" name="QQ3" type="text" class="scinput" value="@Model.QQ3" /></li>
                        <li>
                            <label>地址<b>*</b></label><input id="Address" name="Address" type="text" class="scinput" value="@Model.Address" /></li>
                        <li>
                            <label>公司名称<b>*</b></label><input id="Company" name="Company" type="text" class="scinput" value="@Model.Company" /></li>
                        <li>
                            <label>微信号<b>*</b></label><input id="Weixin" name="Weixin" type="text" class="scinput" value="@Model.Weixin" /></li>
                        <li>
                            <label>备案号<b>*</b></label><input id="ICP" name="ICP" type="text" class="scinput" value="@Model.ICP" /></li>
                        <li>
                            <label>统计代码<b>*</b></label><input id="StatisticalCode" name="StatisticalCode" type="text" class="scinput" value="@Model.StatisticalCode" /></li>
                        <li>
                            <label>&nbsp;</label><input type="submit" class="btn" value="更 新" /></li>
                    </ul>
                </form>
            </div>

        </div>

        <script type="text/javascript">
            $("#usual1 ul").idTabs();
        </script>

        <script type="text/javascript">
            $('.tablelist tbody tr:odd').addClass('odd');
        </script>





    </div>


</body>

</html>

