@model Witbird.SHTS.Model.Extensions.Paging
<div class="fenye" style="margin: 0 auto;">
    @if (Model.PageCount > 1)
    {
        for (int step = 1; step <= Model.PageCount; step = step + Model.PageStep)
        {
            if (Model.PageIndex >= step && Model.PageIndex < step + Model.PageStep)
            {
                //上一页
                if (Model.PageIndex > 1)
                {
                    <span>@Html.ActionLink("上一页", Model.ActionName, new { id = Model.PageIndex - 1 }, new { @class = "prv" }) </span>
                }
                //首页
                if (Model.PageStep < Model.PageIndex)
                {
                    <span>@Html.ActionLink("首页", Model.ActionName, new { id = 1 })</span>
                }
                //分页
                for (int i = step; i < step + Model.PageStep; i++)
                {
                    if (i <= Model.PageCount)
                    {
                        if (i == Model.PageIndex)
                        {
                            <span> @Html.ActionLink(i.ToString(), Model.ActionName, new { id = i }, new { @class = "no" })</span>
                        }
                        else
                        {
                            <span> @Html.ActionLink(i.ToString(), Model.ActionName, new { id = i })</span>
                        }
                    }
                }
                //末页
                if (step + Model.PageStep <= Model.PageCount)
                {
                    <span>@Html.ActionLink("末页", Model.ActionName, new { id = Model.PageCount }) </span>
                }
                //下一页
                if (Model.PageIndex < Model.PageCount)
                {
                    <span> @Html.ActionLink("下一页", Model.ActionName, new { id = Model.PageIndex + 1 }, new { @class = "next" })</span>
                }
            }
        }

    }
</div>