@model Witbird.SHTS.Web.Areas.Admin.Models.ResourceMiscModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>无标题文档</title>
    <link href="/areas/admin/content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/areas/admin/content/css/select.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/areas/admin/content/js/jquery.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/jquery.idTabs.min.js"></script>
    <script type="text/javascript" src="/areas/admin/content/js/select-ui.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function (e) {
            $(".tiptop a").click(function () {
                $(".tip").fadeOut(200);
            });

            $(".sure").click(function () {
                $(".tip").fadeOut(100);
            });

            $(".cancel").click(function () {
                $(".tip").fadeOut(100);
            });
            $(".select1").uedSelect({
                width: 345
            });
            $(".select2").uedSelect({
                width: 150
            });
            $(".select3").uedSelect({
                width: 100
            });
        });

        function showResourceBonusPanel() {
            var allSelectedIds = getAllSelectedResourcesID();
            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else {
                $("#resourceBonusPanel").fadeIn(200);
            }
        }

        function loadData() {
            var resourceTypeKey = $('#ddlResourceType').val();
            window.location = '/admin/resource/manage?resourceTypeKey=' + resourceTypeKey;
        }

        function showWechatBuyResourceFeePanel() {
            var allSelectedIds = getAllSelectedResourcesID();
            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else {
                $("#wechatBuyResourceFeePanel").fadeIn(200);
            }
        }

        var hasAllResourcesSelected = false;

        function selectAllResources(cbxSelectAll) {
            if (!hasAllResourcesSelected) {
                $('.cbxResource').each(function () {
                    $(this).attr("checked", "checked");
                });

                $(cbxSelectAll).attr("checked", "checked");

                hasAllResourcesSelected = true;
            }
            else {
                $('.cbxResource').each(function () {
                    $(this).removeAttr("checked");
                });

                $(cbxSelectAll).removeAttr("checked");

                hasAllResourcesSelected = false;
            }
        }

        function onCbxResourceSelectChanged(cbxResource) {
            if ($(cbxResource).attr('checked') == false) {
                hasAllResourcesSelected = false;
                $('#cbxSelectAll').removeAttr("checked");
            }
        }

        function getAllSelectedResourcesID() {
            var ids = new Array();
            $('.cbxResource').each(function () {
                if ($(this).attr("checked") == true) {
                    ids.push($(this).val());
                }
            });

            return ids;
        }

        function doBtnSetWeChatBuyResourceFeeClickEvent() {
            var allSelectedIds = getAllSelectedResourcesID();
            //allSelectedIds.forEach(function (item) {
            //    alert(item);
            //});
            var fee = $('#txtWeChatBuyResourceFee').val();
            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else if (checkValidFee(fee)) {
                if (confirm('您确认需要设置' + allSelectedIds.length + '条需求信息吗?')) {
                    // Invoke service
                    var resourceIds = '';

                    allSelectedIds.forEach(function (e) {
                        resourceIds += e + ',';
                    });

                    $.post(
                        '/admin/resource/UpdateResourceWeixinBuyFee',
                        {
                            resourceIds: resourceIds,
                            weixinBuyFee: fee
                        },
                        function (data) {
                            if (data.IsSuccessFul) {
                                alert('设置成功！');
                                $('.cbxResource').each(function () {
                                    $(this).removeAttr('checked');
                                });
                                $('#cbxSelectAll').removeAttr("checked");
                                hasAllResourcesSelected = false;
                                window.location = window.location;
                            }
                            else {
                                alert('设置微信购买金额失败！');
                            }
                        });
                }
            }
            else {
                // do nothing
            }
        }

        function checkValidFee(fee) {
            if (fee == '' || fee <= 0) {
                alert('请输入正确的金额');
                return false;
            }

            return true;
        }

        function validateInput(input) {
            var value = $(input).val();
            if (value.length == 1) {
                $(input).val(value.replace(/[^1-9]/g, ''));
            }
            else {
                $(input).val(value.replace(/\D/g, ''));
            }
        }

        function rechargeUserBalance() {
            var amount = $('#amountString').val();
            var allSelectedIds = getAllSelectedResourcesID();

            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else if (checkValidFee(amount)) {
                if (confirm('您确认要奖励' + amount + '元给' + allSelectedIds.length + '条需求信息的发布者吗?')) {
                    // Invoke service
                    var resourceIds = '';

                    allSelectedIds.forEach(function (e) {
                        resourceIds += e + ',';
                    });

                    $.post(
                        '/admin/finance/recharge',
                        {
                            resourceIdString: resourceIds,
                            amountString: amount
                        },
                        function (data) {
                            var isSuccessful = data.IsSuccessful;
                            var errorMessage = data.ErrorMessage;
                            var failedResources = data.FailedResources;
                            var successResources = data.SuccessResources;

                            if (isSuccessful) {
                                if (successResources.length > 0 && failedResources.length > 0) {
                                    alert('奖励金成功发放给' + successResources.length + '位需求发布用户, 有' + failedResources.length + '位用户发放未成功。请刷新页面后再试。');
                                }
                                else {
                                    alert('奖励金成功发放给' + successResources.length + '位需求发布用户');
                                }

                                $('.cbxResource').each(function () {
                                    $(this).removeAttr('checked');
                                });
                                $('#cbxSelectAll').removeAttr("checked");
                                hasAllResourcesSelected = false;
                                window.location.href = window.location.href;
                            }
                        });
                }
            }
            else {
                // do nothing
            }
        }

        function UpdateResourceStatusAsComplete() {
            var allSelectedIds = getAllSelectedResourcesID();
            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else {
                if (confirm('您确认所选择的需求都已经找到资源提供商了吗？该操作不可恢复！')) {
                    // Invoke service
                    var resourceIds = '';

                    allSelectedIds.forEach(function (e) {
                        resourceIds += e + ',';
                    });

                    $.post(
                        '/admin/resource/UpdateResourceStatusAsComplete',
                        {
                            resourceIdString: resourceIds,
                        },
                        function (data) {
                            var isSuccessful = data.IsSuccessful;

                            if (isSuccessful) {
                                alert('标记需求为已完成状态成功');

                                $('.cbxResource').each(function () {
                                    $(this).removeAttr('checked');
                                });
                                $('#cbxSelectAll').removeAttr("checked");
                                hasAllResourcesSelected = false;
                                window.location.href = window.location.href;
                            }
                            else {
                                if (errorMessage == '') {
                                    alert('标记需求为已完成状态失败，请刷新页面后重试');
                                }
                                else {
                                    alert(errorMessage);
                                }
                            }
                        });
                }
            }
        }

        function showSubscriptionResult() {
            var allSelectedIds = getAllSelectedResourcesID();
            if (allSelectedIds.length == 0) {
                alert('请选择需要查看的需求信息！');
                return false;
            }
            else {
                var resourceIds = '';

                allSelectedIds.forEach(function (e) {
                    resourceIds += e + ',';
                });

                var resultLink = '/admin/subscribe/pushhistory?id=1&resourceIds=' + resourceIds;
                window.location = resultLink;
            }
        }

        function deleteResourceType() {
            var allSelectedIds = getAllSelectedResourcesID();
            if (allSelectedIds.length == 0) {
                alert('请选择需要设置的需求信息！');
                return false;
            }
            else {
                if (confirm('您确认所选择的需求吗？该操作不可恢复！')) {
                    // Invoke service
                    var resourceIds = '';

                    allSelectedIds.forEach(function (e) {
                        resourceIds += e + ',';
                    });

                    $.post(
                        '/admin/resource/Delete',
                        {
                            resourceIdString: resourceIds,
                        },
                        function (data) {
                            var isSuccessful = data.IsSuccessful;

                            if (isSuccessful) {
                                alert('需求删除成功');

                                $('.cbxResource').each(function () {
                                    $(this).removeAttr('checked');
                                });
                                $('#cbxSelectAll').removeAttr("checked");
                                hasAllResourcesSelected = false;
                                window.location.href = window.location.href;
                            }
                            else {
                                alert('需求删除失败，请刷新页面后重试');
                            }
                        });
                }
            }
        }

    </script>
    <style>
        .tablelist td {
            max-width: 300px !important;
        }

        .tablelist input[type=checkbox] {
            width: 20px;
            height: 20px;
            vertical-align: middle;
        }

        .weixinpart {
            float: right;
            font-weight: bold;
            padding-right: 10px;
        }

            .weixinpart span {
                font-size: 16px;
                color: blue;
            }

            .weixinpart input {
                margin-left: 10px;
                margin-right: 10px;
                padding-left: 10px;
                border: 1px solid;
                font-size: 13px;
                line-height: 20px;
                height: 20px;
                width: 180px;
            }

            .weixinpart button {
                font-size: 16px;
                font-weight: bold;
                color: blue;
            }

                .weixinpart button:hover {
                    cursor: pointer;
                }

        .toolbar {
            width: 100%;
        }

            .toolbar > li {
                margin-bottom: 5px;
                font-weight: bold;
                text-align: center;
            }

                .toolbar > li img {
                    width: 24px;
                    height: 24px;
                }

                .toolbar > li.button {
                    font-size: 16px;
                    border-radius: 5px;
                    background: #9ed04d;
                    color: white;
                }

                    .toolbar > li.button.btn-primary {
                        background: #167efb;
                    }

                .toolbar > li input, .toolbar > li select {
                    padding: 5px;
                    border: solid 1px burlywood;
                    /* height: 70%; */
                    width: 120px;
                    vertical-align: middle;
                    opacity: 1;
                    text-align:center;
                }

                    .toolbar > li input[type=text], .toolbar > li input[type=search] {
                        width: 244px;
                    }
    </style>
</head>

<body>

    <div class="place">
        <span>位置：</span>
        <ul class="placeul">
            <li><a href="/admin/index/main/">首页</a></li>
            <li><a href="/admin/resource/manage?id=1">资源类型管理</a></li>
        </ul>
    </div>

    <div class="rightinfo">

        <div class="tools">

            <ul class="toolbar">
                <li>
                    &nbsp;筛选：
                <select id="ddlResourceType" onchange="loadData();">

                    <option value="">所有资源类型</option>

                    @foreach (var item in Html.ResourceList())
                    {
                        if (item.Value == Model.ResourceTypeKey)
                        {

                            <option value="@item.Value" selected="selected">@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Value">@item.Text </option>
                        }
                    }
                </select>
                </li>
                <li onclick="showResourceBonusPanel();" title="新增资源类型" @*style="float:right;"*@>
                    <span>
                        <img src="/areas/admin/content/images/iadd.png" />
                    </span>新增资源类型
                </li>
                <li onclick="showResourceBonusPanel();" title="设置需求鼓励金给发布用户" @*style="float:right;"*@>
                    <span>
                        <img src="/areas/admin/content/images/t02.png" />
                    </span>修改资源类型
                </li>
                <li onclick="deleteResourceType();" title="删除选中的资源类型" @*style="float:right;"*@>
                    <span>
                        <img src="/areas/admin/content/images/t03.png" />
                    </span>删除资源类型
                </li>
            </ul>
        </div>

        <table class="tablelist">
            <thead>
                <tr>
                    <th width="40px;">
                    </th>
                    @*<th>类型编号</th>*@
                    <th>资源分类</th>
                    <th>类型名称</th>
                    <th>类型描述</th>
                    <th>显示顺序</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ResourceTypes != null && Model.ResourceTypes.Count > 0)
                {
                    foreach (var item in Model.ResourceTypes)
                    {
                        <tr>
                            <td>
                                <input onchange="onCbxResourceSelectChanged(this);" class="cbxResource" type="checkbox" value="@item.Id" />
                            </td>
                            @*<td>
                                    <span>@item.Id</span>
                                </td>*@
                            <td>
                                <span>
                                    @item.ResourceTypeName
                                </span>
                            </td>
                            <td>
                                <span>@item.Name</span>
                            </td>
                            <td><span>@item.Description</span></td>

                            <td>
                                <span>@item.DisplayOrder</span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div style="height:30px;"></div>

        <!--分页开始-->
        <div class="fenye" style="margin: 0 auto;">
            @if (Model.PageCount > 1)
            {
                for (int step = 1; step <= Model.PageCount; step = step + Model.PageStep)
                {
                    if (Model.PageIndex >= step && Model.PageIndex < step + Model.PageStep)
                    {
                        //上一页
                        if (Model.PageIndex > 1)
                        {
                            <span><a href="/admin/resource/manage?id=@(Model.PageIndex - 1)&resourceTypeKey=@Model.ResourceTypeKey" class="prv">上一页</a></span>
                        }
                        //首页
                        if (Model.PageStep < Model.PageIndex)
                        {
                            <span><a href="/admin/resource/manage?id=1&resourceTypeKey=@Model.ResourceTypeKey">首页</a></span>
                        }
                        //分页
                        for (int i = step; i < step + Model.PageStep; i++)
                        {
                            if (i <= Model.PageCount)
                            {
                                if (i == Model.PageIndex)
                                {
                                    <span><a href="/admin/resource/manage?id=@i&&resourceTypeKey=@Model.ResourceTypeKey" class="no">@i</a></span>
                                }
                                else
                                {
                                    <span><a href="/admin/resource/manage?id=@i&resourceTypeKey=@Model.ResourceTypeKey">@i</a></span>
                                }
                            }
                        }
                        //末页
                        if (step + Model.PageStep <= Model.PageCount)
                        {
                            <span><a href="/admin/resource/manage?id=@(Model.PageCount)&resourceTypeKey=@Model.ResourceTypeKey">末页</a></span>
                        }
                        //下一页
                        if (Model.PageIndex < Model.PageCount)
                        {
                            <span><a href="/admin/resource/manage?id=@(Model.PageIndex + 1)&resourceTypeKey=@Model.ResourceTypeKey" class="next">下一页</a></span>
                        }
                    }
                }
            }
        </div>
        <!--分页结束-->

        <script type="text/javascript">
            $("#usual1 ul").idTabs();
        </script>

        <script type="text/javascript">
            $('.tablelist tbody tr:odd').addClass('odd');
        </script>

    </div>

    <div class="tip" id="resourceBonusPanel">
        <div class="tiptop">
            <span>设置需求发布鼓励金</span><a></a>
        </div>
        <div class="tipinfo">
            <div class="tipright">
                <ul class="forminfo">
                    <li>
                        <label>鼓励金额<b>*</b></label>
                        <input id="amountString" name="amountString" type="number" min="0" class="scinput" placeholder="请输入鼓励金额" />
                    </li>
                    <li>
                        <label><b></b></label>
                        <b>奖励金额一旦发出，将不能退回</b>
                    </li>
                    <li>
                        <label>&nbsp;</label>
                        <input type="button" class="btn submitbtn" value="立即发放" onclick="rechargeUserBalance();" />
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="tip" id="wechatBuyResourceFeePanel">
        <div class="tiptop">
            <span>设置微信购买需求联系方式金额</span><a></a>
        </div>
        <div class="tipinfo">
            <div class="tipright">
                <ul class="forminfo">
                    <li>
                        <label>购买金额<b>*</b></label>
                        <input id="txtWeChatBuyResourceFee" name="txtWeChatBuyResourceFee" type="number" min="0"
                               class="scinput" placeholder="请输入购买金额" onkeyup="validateInput(this)" onafterpaste="validateInput(this)" />
                    </li>
                    <li>
                        <label>&nbsp;</label>
                        <input type="button" class="btn submitbtn" value="立即设置" onclick="doBtnSetWeChatBuyResourceFeeClickEvent();" />
                    </li>
                </ul>
            </div>
        </div>
    </div>

</body>

</html>
