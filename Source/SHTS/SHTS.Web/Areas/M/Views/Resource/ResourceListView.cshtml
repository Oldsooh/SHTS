@model Witbird.SHTS.Model.Extensions.QueryResourceResult
@{
    ViewBag.Title = "ResourceListView";
    var xx = "space";
    switch (Model.ResourceType)
    {
        case 1:
            xx = "space";
            break;
        case 2:
            xx = "actor";
            break;
        case 3:
            xx = "equipment";
            break;
        case 4:
            xx = "other";
            break;
        default:
            break;
    }
}

@{
    ViewBag.Title = "需求列表";
    Layout = "~/Areas/M/Views/Shared/MobileLayoutPage.cshtml";
}
@section head
{
    <style type="text/css">
        #@(xx) a {
            color: #ffffff;
            background-color: #2577e3;
        }
    </style>
}

<div id="main">
    @if (Model.Items != null && Model.Items.Count > 0)
    {
        foreach (var item in Model.Items)
        {
            <ul class="commonlist">
                <li class="atitle">
                    <a href="/m/resource/show/@item.Id" style="margin-right: 10px;">@item.Title</a>
                    <span class="state blue">@item.CreateTime.ToString("MM-dd")</span>
                </li>
                <li>区域位置：<span class="yellow">@Witbird.SHTS.Web.Public.StaticUtility.GetProvinceAndCityNameById(item.ProvinceId, item.CityId, item.AreaId)</span></li>
            </ul>
        }
    }
</div>
