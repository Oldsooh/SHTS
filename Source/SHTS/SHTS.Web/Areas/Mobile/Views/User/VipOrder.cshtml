@model Witbird.SHTS.Web.Models.User.UserViewModel
@{
    ViewBag.Title = "VIP会员认证";
    Layout = "~/Areas/Mobile/Views/Shared/MobileLayoutPage.cshtml";
}
@section head
{
    <link href="~/Areas/Mobile/Content/styles/tovip.css" rel="stylesheet" />
    <link href="~/Areas/Mobile/Content/styles/user.css" rel="stylesheet" />
    <style type="text/css">
        .ur_title { width: 80px; }
        .user_right { font-size: 16px; }
        .ur_box { font-size: 17px; color: #FD9102; }
        .usertable { font-size: 15px; }

            .usertable td { width: 120px; padding-left: 10px; height: 35px; line-height: 35px; }
    </style>
}

<div class="wrap">

    <br />
    <table class="usertable">
        <thead>
            <tr style="background: #f5f8fa;">
                <td><strong>简介</strong></td>
                <td><strong>用户名</strong></td>
                <td><strong>VIP单价</strong></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>VIP会员充值</td>
                <td>@Model.UserEntity.UserName</td>
                <td>￥ 100 元/年</td>
            </tr>
            <tr style="background: #f5f8fa;">
                <td colspan="2"><strong>VIP时间</strong></td>
                <td><strong>总共费用</strong></td>
            </tr>
            <tr>
                <td colspan="2">
                    <select id="selectVipDuration" name="VipDuration" style="font-size: 14px; height: 30px;
                        line-height: 30px;">
                        <option value="-1">请选择VIP会员时间</option>
                        <option value="1">1年VIP</option>
                        <option value="2">2年VIP</option>
                        <option value="3">3年VIP</option>
                        <option value="4">4年VIP</option>
                        <option value="5">5年VIP</option>
                    </select>
                </td>
                <td id="totalAmount" style="color: #ff6a00; font-weight:bold;">￥ 0 元</td>
            </tr>
            <tr><td colspan="3"><br /></td></tr>
            <tr>
            <td></td>
                <td></td>
            <td style="text-align: center;">
                <input name="" type="button" class="tjzl_btn" value="取消" onclick=" window.location.href = '/Mobile/user/index'" />&nbsp;&nbsp;&nbsp;
                <input name="" id="submitVip" type="button" class="tjzl_btn userbtn btndisabled"
                    style="font-size: 16px;"
                    value="确定支付"
                    disabled="disabled" /></td>
            </tr>
        </tbody>
    </table>

    <div class="clearfix"></div>
</div>
<div style="clear: both; height: 30px;"></div>
@section FooterJS
{
    <script src="~/Areas/Mobile/Content/scipts/payment.js"></script>
    <script type="text/javascript">
        $("#selectVipDuration").change(function () {
            $("#submitVip").removeAttr("disabled");
            $("#submitVip").removeClass("btndisabled");
            if ($(this).val() == '-1') {
                $("#submitVip").attr("disabled", "disabled");
                $("#submitVip").addClass("btndisabled");
                $("#totalAmount").html("￥ 0 元");
            }
            else {
                $("#submitVip").removeAttr("disabled");
                $("#submitVip").removeClass("btndisabled");
                $("#totalAmount").html("￥ " + $(this).val() * 100 + " 元");
            }
        });
    </script>
}